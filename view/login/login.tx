[% WRAPPER "wrapper.tx" %]

<h2>Login</h2>

<form action="/login" method="POST">
<dl class="sidebyside">
<dt>Email</dt>
<dd><input type="text" name="email" size="40" /></dd>
</dl>

<dl class="sidebyside">
<dt>Password</dt>
<dd><input type="password" name="password" size="40" /></dd>
</dl>

<input type="hidden" name=".next" value="[% next_uri %]" />
<input type="submit" value="submit" />
</form>

[% END %]
