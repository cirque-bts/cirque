                $(this).remove();
            }
        });
    }
    function subinfo_show( id ) {
        $('#subinfo > div').hide();
        $('#subinfo > div#'+id).show();
    }

    function code_resize ( width ) {
        $('.syntaxhighlighter').css('max-width', width);
